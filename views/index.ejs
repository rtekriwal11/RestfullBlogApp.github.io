<%- include ("partials/header.ejs") %>
<div class="ui main text container">
<div class="ui huge header">Alia bhatt blog app</div>
<div class="ui top attached segment">
	<div class="ui divided item">
	  <% blogs.forEach(function(blog){ %>
		<div class="item">
			<div class="ui centered round image">
				<img src="<%= blog.image%>" >		
			</div>
			<div class="content">
				<a class="header" href="/blog/<%=blog._id%>"> <%= blog.title %> </a>
				<div class="meta">
					<span><%=blog.created.toDateString()%></span>
				</div>
				<div class="descripion">
					<p> <%- blog.body.substring(0,50)%>... </p>
				</div>
				<div class="extra">
					<a class="ui floated basic violet button" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
					<!-- Read More -->
					<i class="right chevron icon"></i>
				</div>
			</div>
		
		
		</div> 
	  <% }) %>
	</div>
</div>	
</div>

<%- include ("partials/footer.ejs") %>
